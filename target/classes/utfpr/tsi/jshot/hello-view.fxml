<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utfpr.tsi.jshot.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="111.0" fitWidth="187.0" preserveRatio="true" VBox.vgrow="NEVER">
      <image>
         <Image url="https://cdn-icons-png.flaticon.com/512/685/685655.png" />
      </image>
   </ImageView>

    <Button fx:id="btnAplicar" defaultButton="true" mnemonicParsing="false" onAction="#takeScreenShotAction" prefHeight="46.0" prefWidth="76.0" text="Take Screenshot" textAlignment="CENTER" wrapText="true" VBox.vgrow="NEVER" />
    <Button fx:id="btnGaleria" defaultButton="true" mnemonicParsing="false" onAction="#abrirMinhaGaleria" prefHeight="46.0" prefWidth="76.0" text="Minha Galeria" textAlignment="CENTER" wrapText="true" VBox.vgrow="NEVER" />

    <stylesheets>
        <URL value="@palette.css" />
    </stylesheets>
</VBox>
